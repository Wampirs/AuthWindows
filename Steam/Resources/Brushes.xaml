<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BackgroundBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#193754" Offset="0.0"/>
        <GradientStop Color="#111929" Offset="0.5"/>
        <GradientStop Color="#000000" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="TopBarBorderBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#212935" Offset="0.0"/>
        <GradientStop Color="#25292f" Offset="0.5"/>
        <GradientStop Color="#2a2d33" Offset="1.0"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="MainBackgroundBrush" Color="#2a2e33"/>


</ResourceDictionary>